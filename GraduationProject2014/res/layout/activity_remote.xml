<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".teleopclient" >

    <ImageButton
        android:background="#a0000000"          
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUp"        
        android:layout_toRightOf="@+id/buttonUp"
        android:src="@drawable/button_right"/>

    <ImageButton
        android:background="#a0000000"   
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUp"
        android:layout_toLeftOf="@+id/buttonUp"
        android:src="@drawable/button_left"/>

    <ImageButton
        android:background="#a0000000"           
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_stop"/>

    <ImageButton
        android:background="#a0000000"           
        android:id="@+id/buttonUp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStatus"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_go"/>

    <ImageButton
        android:background="#a0000000"           
        android:id="@+id/buttonLeftTurn"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStatus"
        android:layout_toLeftOf="@+id/buttonUp"
        android:src="@drawable/button_left_turn"/>
    
    <ImageButton
        android:background="#a0000000"           
        android:id="@+id/buttonRightTurn"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStatus"
        android:layout_toRightOf="@+id/buttonUp"
        android:src="@drawable/button_right_turn"/>
                
    <ImageButton
        android:background="#a0000000"  
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/buttonUp"
        android:src="@drawable/connect_button" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextIPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonClose"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="text"
        android:text="@string/IP" />

    <ImageButton
        android:background="#a0000000"  
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConnect"
        android:layout_alignBottom="@+id/buttonConnect"
        android:layout_toRightOf="@+id/buttonUp"
        android:src="@drawable/quit_button" />

    <ImageButton
        android:id="@+id/buttonRightKick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStairUp"
        android:layout_toRightOf="@+id/buttonStop"
        android:background="#a0000000"
        android:src="@drawable/button_soccer_rfoot" />

    <ImageButton
        android:id="@+id/buttonStairDown "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStairUp"
        android:layout_toLeftOf="@+id/buttonRightKick"
        android:background="#a0000000"
        android:src="@drawable/button_stairdown" />

    <ImageButton
        android:id="@+id/buttonStairUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_toLeftOf="@+id/buttonRight"
        android:background="#a0000000"
        android:src="@drawable/button_stairup" />

    <ImageButton
        android:id="@+id/buttonLeftKick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonLeft"
        android:layout_below="@+id/buttonStairUp"
        android:background="#a0000000"
        android:src="@drawable/button_soccer_lfoot" />

</RelativeLayout>